#------------------------------------------------------------------------------*
#                                                                              *
#   E X P R E S S I O N                                                        *
#                                                                              *
#------------------------------------------------------------------------------*

rule <expression>
  ?let @string inPrefix
  ?let @string inPath
  ?let @string inTemplateDirectory
  ?let @TfieldMap inVariableMap
  !@Tvalue outValue
  !@Ttype outResultType {
  <relation_term>
    !inPrefix
    !inPath
    !inTemplateDirectory
    !inVariableMap
    ?outValue
    ?outResultType
  repeat
  while
    $|$
    @Tvalue leftOperand = outValue
    @Tvalue rightOperand
    @Ttype firstOperandType = outResultType
    @Ttype secondOperandType
    <relation_term>
      !inPrefix
      !inPath
      !inTemplateDirectory
      !inVariableMap
      ?rightOperand
      ?secondOperandType
    outValue.mBigIntValue = [leftOperand mBigIntValue] | [rightOperand mBigIntValue]
    matchOrOperatorForTemplate (
      !firstOperandType
      !secondOperandType
      ?outResultType
    )
  while
    $^$
    @Tvalue leftOperand = outValue
    @Tvalue rightOperand
    @Ttype firstOperandType = outResultType
    @Ttype secondOperandType
    <relation_term>
      !inPrefix
      !inPath
      !inTemplateDirectory
      !inVariableMap
      ?rightOperand
      ?secondOperandType
    outValue.mBigIntValue = [leftOperand mBigIntValue] ^ [rightOperand mBigIntValue]
    matchXorOperatorForTemplate (
      !firstOperandType
      !secondOperandType
      ?outResultType
    )
  end
}

