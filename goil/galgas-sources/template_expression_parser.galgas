  ?let @string inPrefix
  ?let @string inPath
  ?let @string inTemplateDirectory
  ?let @TfieldMap inVariableMap
  !@Tvalue outValue
  !@Ttype outResultType {
  $not$
  @Tvalue expression
  @Ttype operandType
  <factor>
    !inPrefix
    !inPath
    !inTemplateDirectory
    !inVariableMap
    ?expression
    ?operandType
  outValue = valueWithUnsigned(!1_G - [expression mBigIntValue] !emptyLString())
  checkNotOperatorForTemplate ( !operandType ?outResultType)
}

