/*  XXX : WARNING
 *        This file is included from an oil file located in one of the
 *        tests' directory. In that case, compiler relative paths are from the
 *        test's directory !
 */

IMPLEMENTATION archMpc5643l
{
  TASK
  {
    UINT32 STACKSIZE = 1400;
    UINT32 PRIORITY = 1;
  };

  ISR
  {
    UINT32 STACKSIZE = 1400;
  };

  COUNTER
  {
    IDENTIFIER SOURCE = pit_ch0;
    UINT32  FREQUENCY = 120000;
  };
};

CPU archMpc5643lCosmic
{
  OS defaultOS {
    MEMMAP = TRUE
    {
      LINKER = cosmic_ld { SCRIPT = "script.lkf";};
      COMPILER = cosmic;
      ASSEMBLER = cosmic_as;
    };
    BUILD = TRUE
    {
      COMPILER = "../../../examples/ppc/tools/cxvle_auto.py";
      ASSEMBLER = "../../../examples/ppc/tools/cxvle_auto.py";
      LINKER = "../../../examples/ppc/tools/clnk_auto.py";
      CFLAGS = "-I../../embUnit";
      //LDFLAGS = "-l ../../lib/libembUnit.a";
      APP_SRC = "../../machines/ppc/mpc5643l/config.c";
      SYSTEM = PYTHON;
    };
    USEVLE = TRUE;
    SYSTEM_CALL = TRUE;
    DEBUG = TRUE;
  };
};

