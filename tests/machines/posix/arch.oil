 *        This file is included from an oil file located in one of the
 *        tests' directory. In that case, compiler relative paths are from the
 *        test's directory !
 */

IMPLEMENTATION archPosix
{
  TASK {
    UINT32 STACKSIZE = 32768;
    UINT32 PRIORITY = 1;
  };

};

CPU archPosixDefault
{
  OS defaultOS
  {
    BUILD = TRUE
    {
      COMPILER = "gcc";
      ASSEMBLER = "gcc";
      LINKER = "gcc";
      CFLAGS = "-Werror -Wall -pedantic";
      CFLAGS = "-Wmissing-field-initializers";
      CFLAGS = "-Wno-unused-but-set-variable";
      CFLAGS = "-I../../embUnit";
      LDFLAGS = "-L../../lib -lembUnit";
      LDFLAGS = "-lrt";
      LDFLAGS = "-lpthread";
      APP_SRC = "../../machines/posix/config.c";
      SYSTEM = PYTHON;
    };
  };
};




